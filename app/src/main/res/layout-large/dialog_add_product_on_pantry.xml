<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fab_material_white">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--ExpandableListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </ExpandableListView-->
        <com.elvis.shopping.list.view.MyTextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quick_contact_badge_overlay"
            android:padding="8dp"
            android:text="@string/category_text"
            android:textColor="@color/colorPrimaryDark" />
        <com.elvis.shopping.list.view.MyEditText
            android:id="@+id/categorySet"
            android:inputType="textCapSentences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/category_text"
            android:padding="8dp"
            android:textColor="@color/material_black_grey"
            android:textColorHint="@color/fab_material_grey_500"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.elvis.shopping.list.view.MyTextView
            android:id="@+id/nameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome_text"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryDark"/>
        <com.elvis.shopping.list.view.MyEditText
            android:id="@+id/nameSet"
            android:inputType="textCapSentences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/nome_text"
            android:textColor="@color/material_black_grey"
            android:padding="8dp"
            android:textColorHint="@color/fab_material_grey_500"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.elvis.shopping.list.view.MyTextView
            android:id="@+id/quantTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quantidade_text"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryDark"/>
        <com.elvis.shopping.list.view.MyEditText
            android:id="@+id/quantSet"
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/zero_text"
            android:textColor="@color/material_black_grey"
            android:padding="8dp"
            android:textColorHint="@color/fab_material_grey_500"/>
        <!--ExpandableListView
            android:id="@+id/listViewUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </ExpandableListView-->
        <com.elvis.shopping.list.view.MyTextView
            android:id="@+id/unitTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quick_contact_badge_overlay"
            android:text="@string/unidade_text"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryDark"/>
        <com.elvis.shopping.list.view.MyEditText
            android:id="@+id/unitSet"
            android:inputType="textCapSentences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/unidade_text"
            android:textColor="@color/material_black_grey"
            android:padding="8dp"
            android:textColorHint="@color/fab_material_grey_500"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.elvis.shopping.list.view.MySingleButton
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pronto_text"
            android:textColor="@color/fab_material_green_900"
            android:background="@drawable/btn_bg"
            android:layout_margin="1dp"/>
        <com.elvis.shopping.list.view.MySingleButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancelar_text"
            android:textColor="@color/fab_material_red_900"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp" />
    </TableRow>
</LinearLayout>