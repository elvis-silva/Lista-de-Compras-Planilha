<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/fab_material_white"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fab_material_white"
        android:padding="@dimen/cardview_padding">

        <com.elvis.shopping.list.view.MyTextView
            android:id="@+id/dialogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/material_black_grey"/>

        <TableRow
            android:layout_below="@+id/dialogText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">
            <com.elvis.shopping.list.view.MyTextView
                android:id="@+id/dialogButtonOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_confirm"
                android:textColor="@color/fab_material_green_900"
                android:background="@drawable/btn_dialog_bg"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="@dimen/activity_vertical_margin"/>

            <com.elvis.shopping.list.view.MyTextView
                android:id="@+id/dialogButtonNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_no"
                android:textColor="@color/fab_material_red_900"
                android:background="@drawable/btn_dialog_bg"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="@dimen/activity_vertical_margin"/>
        </TableRow>

    </RelativeLayout>
</android.support.v7.widget.CardView>